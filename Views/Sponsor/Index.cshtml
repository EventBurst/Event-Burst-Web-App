@model List<Event_Burst_Web_App.Models.Sponsor>

@{
ViewBag.Title = "Sponsor Dashboard";
}

<h1 class="text-center">@ViewBag.Title</h1>

<div class="container">
    <div class="row">
        <div class="col-md-12"> <!-- Expanded to full width -->
            <div class="mt-3">
                <a href="@Url.Action("Create")" class="btn btn-success">Create Sponsor</a>
            </div>
            <h2 class="mt-3">All Sponsors</h2>
            <div class="table-responsive"> <!-- Make table responsive for small screens -->
                <table class="table table-striped mt-3">
                    <thead>
                    <tr>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Phone Number</th>
                        <th>Address</th>
                        <th>Contribution</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    @foreach (var sponsor in Model)
                    {
                    <tr>
                        <td>@sponsor.Name</td>
                        <td>@sponsor.Email</td>
                        <td>@sponsor.PhoneNumber</td>
                        <td>@sponsor.Address</td>
                        <td>@sponsor.Contribution</td>
                        <td class="rounded-3 d-flex bg-transparent border-1 border-light m-2 gap-2 justify-content-center"><form id="updateForm_@sponsor.SponsorId" action="@Url.Action("Update", "Sponsor")" method="get">
                                <input type="hidden" name="id" value="@sponsor.SponsorId" />
                                <button type="submit" class="btn btn-primary">
                                    <i class="bi bi-pencil"></i> Update
                                </button>
                            </form>

                            <form id="deleteForm_@sponsor.SponsorId" action="@Url.Action("Delete", "Sponsor")" method="post" onsubmit="return confirm('Are you sure you want to delete this sponsor?');">
                                <input type="hidden" name="id" value="@sponsor.SponsorId" />
                                <button type="submit" class="btn btn-danger delete-button">
                                    <i class="bi bi-trash"></i> Delete
                                </button>
                            </form>
                        </td>
                    </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
