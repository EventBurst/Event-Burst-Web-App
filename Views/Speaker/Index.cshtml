@model List<Event_Burst_Web_App.Models.Speaker>

@{
    ViewBag.Title = "Speaker Dashboard";
}

<h1 class="text-center">@ViewBag.Title</h1>

<div class="container">
    <div class="row">
        <div class="col-md-12"> <!-- Expanded to full width -->
            <div class="mt-3">
                <a href="@Url.Action("Create", "Speaker")" class="btn btn-success">Create Speaker</a>
            </div>
            <h2 class="mt-3">All Speakers</h2>
            <div class="table-responsive"> <!-- Make table responsive for small screens -->
                <table class="table table-striped mt-3">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Phone Number</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var speaker in Model)
                        {
                            <tr>
                                <td>@speaker.Name</td>
                                <td>@speaker.Email</td>
                                <td>@speaker.PhoneNumber</td>
                                <td class="rounded-3 d-flex bg-transparent border-1 border-light m-2 gap-2 justify-content-center">
                                    <form id="updateForm_@speaker.SpeakerId" action="@Url.Action("Update", "Speaker")" method="get">
                                        <input type="hidden" name="id" value="@speaker.SpeakerId" />
                                        <button type="submit" class="btn btn-primary">
                                            <i class="bi bi-pencil"></i> Update
                                        </button>
                                    </form>

                                    <form id="deleteForm_@speaker.SpeakerId" action="@Url.Action("Delete", "Speaker")" method="post" onsubmit="return confirm('Are you sure you want to delete this speaker?');">
                                        <input type="hidden" name="id" value="@speaker.SpeakerId" />
                                        <button type="submit" class="btn btn-danger delete-button">
                                            <i class="bi bi-trash"></i> Delete
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
