@{
ViewData["Title"] = "Register";
}

<h1>@ViewData["Title"]</h1>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form id="registerForm" onsubmit="submitForm(event)">
                <div class="mb-3">
                    <label for="fullName" class="form-label">Full Name</label>
                    <input type="text" class="form-control" id="fullName">
                </div>
                <div class="mb-3">
                    <label for="email" class="form-label">Email Address</label>
                    <input type="email" class="form-control" id="email">
                </div>
                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input type="password" class="form-control" id="password">
                </div>
                <div class="mb-3">
                    <label for="confirmPassword" class="form-label">Confirm Password</label>
                    <input type="password" class="form-control" id="confirmPassword">
                </div>
                <div class="text-center">
                    <button  class="btn btn-primary" type="submit">Register</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function submitForm(event) {
            event.preventDefault(); // Prevent form submission

            // Get form data
            var fullName = document.getElementById('fullName').value;
            var email = document.getElementById('email').value;
            var password = document.getElementById('password').value;
            var confirmPassword = document.getElementById('confirmPassword').value;

            // Validate form data
            if (fullName === '' || email === '' || password === '' || confirmPassword === '') {
                // Display error message
                showAlert('Please fill in all fields', 'alert-danger');
                return;
            }
            if (password !== confirmPassword) {
                // Display error message
                showAlert('Passwords do not match', 'alert-danger');
                return;
            }
            
            // Construct data object
            var data = {
                fullname: fullName,
                email: email,
                password: password
            };

            // Construct API URL
            var apiUrl = 'http://localhost:8004/api/shiny-barnacle/organizer/create';

            // Make POST request using Fetch API
            fetch(apiUrl, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify(data)
            })
            .then(response => {
                if (!response.ok) {
                    throw new Error('Network response was not ok');
                }
                return response.json();
            })
            .then(data => {
                // Successful registration
                console.log('Registration successful');
                showAlert('Registration successful', 'alert-success');
            })
            .catch(error => {
                // Failed registration
                console.error('Registration failed:', error);
                showAlert('Registration failed', 'alert-danger');
            });
        }

        // Function to display an alert
        function showAlert(message, alertType) {
            // Create alert element
            var alertDiv = document.createElement('div');
            alertDiv.className = 'alert ' + alertType;
            alertDiv.appendChild(document.createTextNode(message));

            // Insert alert before the form
            var container = document.querySelector('.container');
            container.insertBefore(alertDiv, container.firstChild);

            // Remove alert after 3 seconds
            setTimeout(function() {
                container.removeChild(alertDiv);
            }, 3000);
        }
    </script>
}
