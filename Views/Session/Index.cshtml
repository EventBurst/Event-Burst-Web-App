@model List<Event_Burst_Web_App.Models.Session>

@{
ViewBag.Title = "Session Dashboard";
}

<h1 class="text-center">@ViewBag.Title</h1>

<div class="container">
    <div class="row">
        <div class="col-md-12"> <!-- Expanded to full width -->
            <div class="mt-3">
                <a href="@Url.Action("Create", "Session")" class="btn btn-success">Create Session</a>
            </div>
            <h2 class="mt-3">All Sessions</h2>
            <div class="table-responsive"> <!-- Make table responsive for small screens -->
                <table class="table table-striped mt-3">
                    <thead>
                    <tr>
                        <th>Name</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    @foreach (var sessionItem in Model)
                    {
                    <tr>
                        <td>@sessionItem.Name</td>
                        <td class="rounded-3 d-flex bg-transparent border-1 border-light m-2 gap-2 justify-content-center">
                            <form id="updateForm_@sessionItem.SessionId" action="@Url.Action("Update", "Session")" method="get">
                                <input type="hidden" name="id" value="@sessionItem.SessionId" />
                                <button type="submit" class="btn btn-primary">
                                    <i class="bi bi-pencil"></i> Update
                                </button>
                            </form>

                            <form id="deleteForm_@sessionItem.SessionId" action="@Url.Action("Delete", "Session")" method="post" onsubmit="return confirm('Are you sure you want to delete this session?');">
                                <input type="hidden" name="id" value="@sessionItem.SessionId" />
                                <button type="submit" class="btn btn-danger delete-button">
                                    <i class="bi bi-trash"></i> Delete
                                </button>
                            </form>
                        </td>
                    </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
